
@model List<Cliente>
@{
    ViewData["Title"] = "Clientes";
}


<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <a class="btn btn-success" role="button" asp-controller="Cliente" asp-action="Create">Adicionar novo cliente</a>
        <a class="btn btn-success" role="button">Contratos Ativos</a>
        <a class="btn btn-success" role="button">Histórico de Faturação</a>
    </div>
    <br />
    <h1 class="display-4">Lista de Clientes</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(Cliente cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.Id</th>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Email</td>
                        <td></td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-success" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="DeleteConfirmation">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>




