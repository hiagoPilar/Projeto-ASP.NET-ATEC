        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Projeto" asp-action="Index">Projetos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Contratos" asp-action="Index">Contratos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Relatorios" asp-action="ProjetosAtivos">Relatório de Projetos Ativos</a>
        </li>
        
        @if (Model.Perfil == Projeto_ASP.NET_Core_ATEC.Enums.PerfilEnum.Admin)
