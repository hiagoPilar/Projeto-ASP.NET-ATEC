@model Funcionario

@{
    ViewData["Title"] = "Editar Funcionário";
}

<div class="text-center">


    <h1 class="display-4">Editar Funcionário</h1>

</div>

<form asp-controller="Funcionario" asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label for="expecializacao" class="form-label">Especializacao</label>
        <input type="text" asp-for="Especializacao" class="form-control">
    </div>
    <div class="mb-3">
        <label for="dataContratacao" class="form-label">Data da Contratação</label>
        <input type="text" asp-for="DataContratacao" class="form-control">
    </div>
    <br />
    <button type="submit" class="btn btn-success btn-block w-100 py-2">Alterar</button>
    <br />
    <br />
    <a class="btn btn-secondary btn-block w-100 py-2" asp-controller="Funcionario" asp-action="Index" role="button">Voltar</a>
</form>
